{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "target": "es2015",
    "declaration": true,
    "inlineSources": true,
    "types": [
      "jasmine",
    ],
    "lib": [
      "dom",
      "es2018"
    ],
    "paths": {
      "ydr-ng-common": ["../../ydr-ng-common"],
    }
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true
  },
  "exclude": [
    "src/test.ts",
    "src/lib/testing",
    "**/*.spec.ts",
  ]
}
